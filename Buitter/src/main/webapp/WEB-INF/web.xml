<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>Home</servlet-name>
		<servlet-class>it.itba.edu.ar.servlets.Home</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Register</servlet-name>
		<servlet-class>it.itba.edu.ar.servlets.Register</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/register</url-pattern>
		<url-pattern>/editprofile</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>it.itba.edu.ar.servlets.Logout</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>it.itba.edu.ar.servlets.Login</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ForgotPassword</servlet-name>
		<servlet-class>it.itba.edu.ar.servlets.ForgotPassword</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ForgotPassword</servlet-name>
		<url-pattern>/recoverpassword</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>MyBuits</servlet-name>
		<servlet-class>it.itba.edu.ar.servlets.MyBuits</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MyBuits</servlet-name>
		<url-pattern>/profile</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>SearchResults</servlet-name>
		<servlet-class>it.itba.edu.ar.servlets.SearchResults</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SearchResults</servlet-name>
		<url-pattern>/searchresults</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Hashtag</servlet-name>
		<servlet-class>it.itba.edu.ar.servlets.Hashtag</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Hashtag</servlet-name>
		<url-pattern>/hashtag</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>DeleteBuit</servlet-name>
		<servlet-class>it.itba.edu.ar.servlets.DeleteBuit</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteBuit</servlet-name>
		<url-pattern>/deletebuit</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ImageServlet</servlet-name>
		<servlet-class>it.itba.edu.ar.servlets.ImageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ImageServlet</servlet-name>
		<url-pattern>/image</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>HomeFilter</filter-name>
		<filter-class>it.itba.edu.ar.filters.HomeFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>HomeFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>ErrorFilter</filter-name>
		<filter-class>it.itba.edu.ar.filters.ErrorFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ErrorFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/error.jsp</location>
	</error-page>
</web-app>
